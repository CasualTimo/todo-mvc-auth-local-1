<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body class="todoBackg">
    <section class="topBit" >

    <h1 class="center outline">Orders</h1>
    <ul>
        <% todos.forEach( el=> { %>
            <li class='todoItem center big outline' data-id='<%=el._id%>'>
                <span class='<%= el.completed === true ? ' completed' : 'not' %>'><%= el.todo %></span>
                <% if (user.chef !=='on' ) { %>
                    <span class='del'> Delete </span>
                    <%}%>
            </li>
            <% }) %>
    </ul>
    
    <h2 class="center outline">
        <%= user.userName %> has <%= left %> order<% if (left> 1 || left === 0) {%>s<%} %>%>.
    </h2>
</section>
    <% if (user.chef !=='on' ) { %>
        <form class="center" action="/todos/createTodo" method='POST'>
            <input a href class='butt cheeburger outline' type="submit" name="todoItem" value="Cheeseburger" placeholder="Cheeseburger">
            <input class='butt burger outline' type="submit" name="todoItem" value="Hamburger" placeholder="Hamburger">
            <input class='butt waffle outline' type="submit" name="todoItem" value="Waffleburger" placeholder="Waffleburger">
            
           
        </form>

        <form class="center" action="/todos/createTodo" method='POST'>
            <input class='buttOn fries outline' type="submit" name="todoItem" value="Fries" placeholder="Fries">
            <input class='buttOn fries outline' type="submit" name="todoItem" value="Fries" placeholder="Fries">
            <input class='buttOn fries outline' type="submit" name="todoItem" value="Fries" placeholder="Fries">
        </form>

        <form class="center" action="/todos/createTodo" method='POST'>
            <input class='leButt fries outline' type="submit" name="todoItem" value="Fries" placeholder="Fries">
            <input class='leButt fries outline' type="submit" name="todoItem" value="Fries" placeholder="Fries">
            <input class='leButt fries outline' type="submit" name="todoItem" value="Fries" placeholder="Fries">
            <input class='leButt fries outline' type="submit" name="todoItem" value="Fries" placeholder="Fries">
        </form>
        <%}%>
            <div class="center log outline">
                <a href="/logout">Logout</a>
            </div>
            <script src="js/main.js"></script>
</body>

</html>